<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailResultSPKActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_chopper"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_bulldozer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/chopper"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_chopper"
            app:layout_constraintLeft_toRightOf="@id/iv_chopper"
            app:layout_constraintTop_toTopOf="@id/iv_chopper" />

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_chopper" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="@string/set_location"
            app:layout_constraintBottom_toBottomOf="@id/iv_location"
            app:layout_constraintLeft_toRightOf="@id/iv_location"
            app:layout_constraintTop_toTopOf="@id/iv_location" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_account"
            app:layout_constraintLeft_toRightOf="@id/tv_location"
            app:layout_constraintTop_toTopOf="@id/iv_location" />

        <TextView
            android:id="@+id/tv_pengamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:text="@string/pengamat"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintLeft_toRightOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@id/iv_profile" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_list_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pengamat"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_title_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_list_data"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <View
                    android:id="@+id/view0"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_data"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tv_plot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/plot"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toBottomOf="@id/view0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_bt"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bt"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_plot"
                    app:layout_constraintLeft_toRightOf="@id/tv_plot"
                    app:layout_constraintRight_toLeftOf="@id/tv_th"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_th"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/th"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_plot"
                    app:layout_constraintLeft_toRightOf="@id/tv_bt"
                    app:layout_constraintRight_toLeftOf="@id/tv_ar"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_ar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ar"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_plot"
                    app:layout_constraintLeft_toRightOf="@id/tv_th"
                    app:layout_constraintRight_toLeftOf="@id/tv_total"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/tv_plot"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_ar"
                    app:layout_constraintHorizontal_weight="1.9" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_data_null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_null"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@android:color/holo_red_light"
                    app:layout_constraintTop_toBottomOf="@id/tv_plot"
                    app:layout_constraintLeft_toLeftOf="@id/tv_plot"
                    app:layout_constraintRight_toRightOf="@id/tv_total"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/rv_list_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_plot"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    tools:listitem="@layout/item_list_chopper"
                    tools:itemCount="6"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_total_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_list_data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_title_total_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_sample"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                    android:id="@+id/tv_total_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/tv_title_total_data"
                    app:layout_constraintLeft_toRightOf="@id/tv_title_total_data"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tv_title_total_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bt"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_data"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_title_total_th"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_title_total_th"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/th"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_title_total_bt"
                    app:layout_constraintLeft_toRightOf="@id/tv_title_total_bt"
                    app:layout_constraintRight_toLeftOf="@id/tv_title_total_ar"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_title_total_ar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ar"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_title_total_bt"
                    app:layout_constraintLeft_toRightOf="@id/tv_title_total_th"
                    app:layout_constraintRight_toLeftOf="@id/tv_mean"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_mean"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/tv_title_total_bt"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_title_total_ar"
                    app:layout_constraintHorizontal_weight="1.9" />

                <TextView
                    android:id="@+id/tv_total_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_total_bt"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_total_th"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_total_th"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_total_bt"
                    app:layout_constraintLeft_toRightOf="@id/tv_total_bt"
                    app:layout_constraintRight_toLeftOf="@id/tv_total_ar"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_total_ar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginEnd="3dp"
                    app:layout_constraintTop_toTopOf="@id/tv_total_bt"
                    app:layout_constraintLeft_toRightOf="@id/tv_total_th"
                    app:layout_constraintRight_toLeftOf="@id/tv_total_mean"
                    app:layout_constraintHorizontal_weight="1.9"/>

                <TextView
                    android:id="@+id/tv_total_mean"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="#38C9A3"
                    android:padding="3dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="@id/tv_total_bt"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_total_ar"
                    app:layout_constraintHorizontal_weight="1.9" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_get_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv_total_data"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_title_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notes"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ggf_story"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_note"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv_get_note"
            app:layout_constraintLeft_toLeftOf="parent">

            <EditText
                android:id="@+id/et_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/notes"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:minLines="3"
                android:autofillHints="@string/notes"
                tools:ignore="RtlHardcoded" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_disagree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_red"
            android:text="@string/disagree"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cv_notes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt_agree"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="@string/agree"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/bt_disagree"
            app:layout_constraintBottom_toBottomOf="@id/bt_disagree"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bt_disagree"
            app:layout_constraintHorizontal_weight="0.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>